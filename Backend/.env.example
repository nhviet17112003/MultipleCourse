# MongoDB connection string
DATABASE_URL=mongodb+srv://<username>:<password>@<cluster-url>/<database-name>

# Secret key for application (used for signing tokens, etc.)
SECRET_KEY=<your-secret-key>

# Email credentials for sending emails
EMAIL=<your-email>
PASSWORD=<your-email-password-or-app-password>

# Bank account details
BANK_CODE=<your-bank-code> # Example: MB for Military Bank
BANK_ACCOUNT_NUMBER=<your-bank-account-number>
BANK_ACCOUNT_NAME=<your-bank-account-name>

# PayOS API credentials
PAYOS_CLIENT_ID=<your-payos-client-id>
PAYOS_API_KEY=<your-payos-api-key>
PAYOS_CHECKSUM_KEY=<your-payos-checksum-key>

# Google OAuth credentials
GOOGLE_CLIENT_ID=<your-google-client-id>
GOOGLE_PROJECT_ID=<your-google-project-id>
GOOGLE_AUTH_URI=https://accounts.google.com/o/oauth2/auth
GOOGLE_TOKEN_URI=https://oauth2.googleapis.com/token
GOOGLE_AUTH_PROVIDER_CERT_URL=https://www.googleapis.com/oauth2/v1/certs
GOOGLE_CLIENT_SECRET=<your-google-client-secret>
GOOGLE_REDIRECT_URIS=http://localhost:3000/api/users/auth/callback # Redirect URI for OAuth
GOOGLE_JAVASCRIPT_ORIGINS=http://localhost:3001 # Allowed JavaScript origins